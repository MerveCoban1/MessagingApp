<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginBottom="10dp"
    android:background="#dfe4ea"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/rViewKullaniciAdiTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textColor="#1B1464" />


    <ImageView
        android:id="@+id/rViewResimImageView"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/rViewYorumTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#006266" />

    <Button
        android:id="@+id/silPostButton"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:background="@drawable/buton_back_three"
        android:text="Sil" />


</LinearLayout>
