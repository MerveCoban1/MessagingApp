<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#C9DFEC"
    android:orientation="vertical"
    tools:context=".ProfilActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                app:civ_border_color="#1DABB8"
                app:civ_border_width="2dp"
                android:src="@drawable/default_profile" />

            <EditText
                android:id="@+id/kullaniciAdi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:enabled="true"
                android:hint="Kullanici Adi:"
                android:textColor="#0F3057" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:text="Temel Bilgiler"
                android:textColor="#3E4651"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/kullaniciEgitim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="40dp"
                android:hint="Egitim"
                android:textColor="#0F3057" />

            <EditText
                android:id="@+id/kullaniciDogumTarihi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="40dp"
                android:hint="Dogum Tarihi:"
                android:textColor="#0F3057" />

            <EditText
                android:id="@+id/kullaniciHakkinda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="40dp"
                android:hint="Hakkinda"
                android:textColor="#0F3057" />

            <Button
                android:id="@+id/bilgiGuncelleOlButonu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/buton_back"
                android:text="Kaydet" />

            <LinearLayout
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/sifreDegis"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/buton_backkk"
                    android:text="Sifre Degistir" />

                <Button
                    android:id="@+id/emailDegis"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/buton_backkk"
                    android:text="E-mail Degistir" />

                <Button
                    android:id="@+id/hesabiSil"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/buton_backkk"
                    android:text="Hesabi Sil" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>