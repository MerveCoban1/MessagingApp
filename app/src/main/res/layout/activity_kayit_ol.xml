<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_two"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".KayitOlActivity">


    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:hint="email: "
        android:textColor="#008891" />

    <EditText
        android:id="@+id/sifre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="sifre: "
        android:inputType="textPassword"
        android:textColor="#008891" />

    <Button
        android:id="@+id/kayitol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buton_back"
        android:text="Kayıt Ol" />

    <Button
        android:id="@+id/hesapVar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/buton_back_two"
        android:text="Giriş" />

</LinearLayout>